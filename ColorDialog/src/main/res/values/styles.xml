<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="colorDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--android.R.style.Theme_Black_NoTitleBar_Fullscreen-->
    <style name="colorDialogFullScreen" parent="android:Theme.NoTitleBar.Fullscreen">

        <item name="android:windowBackground">@color/color_background_image_dialog</item>

    </style>
</resources>
